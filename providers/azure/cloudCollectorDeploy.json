{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "ntt-samurai"
        },
        "adminPasswordOrKey": {
            "type": "securestring",
                "metadata": {
                    "description": "SSH Key or password for the Virtual Machine. SSH key is recommended."
                }
        },
        "authenticationType": {
            "type": "string",
            "defaultValue": "sshPublicKey",
            "allowedValues": [
                "sshPublicKey",
                "password"
                ],
            "metadata": {
                "description": "Type of authentication to use on the Virtual Machine. SSH key is recommended."
            }
        },
        "subnetId": {
            "type": "string"
        },
        "cloudInit": {
            "type": "string",
            "metadata": {
                "description": "Base64 encoded Cloud Init Config"
            }
        }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2019-10-01",
        "name": "SamuraiCloudCollector",
        "properties": {
          "mode": "Incremental",
          "parameters": {
            "adminUsername": {
                "value": "[parameters('adminUsername')]"
            },
            "adminPasswordOrKey": {
                "value": "[parameters('adminPassword')]"
            },
            "authenticationType": {
                "value": "[parameters('authenticationType')]"
            },
            "subnetId": {
                "value": "[parameters('subnetId')]"
            },
            "location": {
                "value": "[parameters('location')]"
            },
            "customData": {
                "value": "[parameters('cloudInit')]"
            }
          },
          "templateLink": {
            "uri": "https://raw.githubusercontent.com/NTTS-Innovation/samurai-xdr-cloud-integrations/feature-azure-cloud-collector/providers/azure/cloudCollector.json",
            "contentVersion": "1.0.0.0"
          }
        }
      }
    ]
  }