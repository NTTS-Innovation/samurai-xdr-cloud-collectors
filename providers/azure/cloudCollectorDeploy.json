{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "ntt-samurai"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin password on all VMs."
            }
        },
        "subnetId": {
            "type": "string"
        },
        "cloudInit": {
            "type": "string",
            "metadata": {
                "description": "Base64 encoded Cloud Init Config"
            }
        }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2019-10-01",
        "name": "linkedTemplate",
        "properties": {
          "mode": "Incremental",
          "parameters": {
            "adminUsername": {
                "value": "[parameters('adminUsername')]"
            },
            "adminPassword": {
                "value": "[parameters('adminPassword')]"
            },
            "subnetId": {
                "value": "[parameters('subnetId')]"
            },
            "customData": {
                "value": "[parameters('cloudInit')]"
            }
          },
          "templateLink": {
            "uri": "https://raw.githubusercontent.com/NTTS-Innovation/samurai-xdr-cloud-integrations/feature-azure-cloud-collector/providers/azure/cloudCollectorDeploy.json",
            "contentVersion": "1.0.0.0"
          }
        }
      }
    ]
  }