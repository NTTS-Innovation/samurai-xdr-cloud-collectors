{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
     },
    "logSources": {
      "type": "string",
      "defaultValue": "*",
      "metadata": {
        "description": "Log Source IP addresses/CIDR range"
      }
    },
    "dnsLabelPrefix": {
      "type": "string",
      "defaultValue": "[uniqueString(resourceGroup().id)]",
      "metadata": {
        "description": "Unique DNS Name for the public IP address"
      }
    },
    "publicIp": {
      "type": "bool"
    },
    "subnetId": {
      "type": "string"
    },
    "customData": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "variables": {
    "vmSku": "Standard_D2s_v3",
    "imagePublisher": "Canonical",
    "imageOffer": "0001-com-ubuntu-minimal-jammy",
    "imageSku": "minimal-22_04-lts",
    "imageOSVersion": "latest",
    "adminUsername": "ntts",
    "adminPassword": "[concat('P',uniqueString( resourceGroup().id, deployment().name ),'x','!')]",
    "virtualMachineName": "[concat('samurai-cloud-collector-', uniqueString( resourceGroup().id, deployment().name ))]",
    "dataDiskName": "[concat('samurai-cloud-collector-', uniqueString( resourceGroup().id, deployment().name ), '-disk')]",
    "publicIPAddressName": "[concat('samurai-cloud-collector-', uniqueString( resourceGroup().id, deployment().name ), '-ip')]",
    "publicIPAddressType": "Dynamic",
    "networkSecurityGroupName": "[concat(variables('virtualMachineName'),'-nsg')]",
    "nicName":"[concat('samurai-cloud-collector-', uniqueString( resourceGroup().id, deployment().name ), '-networkInterface1')]",
    "publicIp": {
      "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]"
    }
    
  },
  "resources": [
    {
      "apiVersion": "2019-06-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "condition": "[parameters('publicIp')]",
      "name": "[variables('publicIPAddressName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('dnsLabelPrefix')]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-05-01",
      "name": "[variables('networkSecurityGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "ssh_rule",
            "properties": {
              "description": "Locks inbound down to ssh default port 22.",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 123,
              "direction": "Inbound"
              }
            },
            {
              "name": "tcp_syslog",
              "properties": {
                "description": "TCP Syslog",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "514",
                "sourceAddressPrefix": "[parameters('logSources')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 100,
                "direction": "Inbound"
              }
            },
            {
              "name": "udp_syslog",
              "properties": {
                "description": "UDP Syslog",
                "protocol": "Udp",
                "sourcePortRange": "*",
                "destinationPortRange": "514",
                "sourceAddressPrefix": "[parameters('logSources')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 110,
                "direction": "Inbound"
              }
            }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/disks",
      "apiVersion": "2022-07-02",
      "name": "[variables('dataDiskName')]",
      "location": "[parameters('location')]",
      "sku": {
          "name": "Premium_LRS",
          "tier": "Premium"
      },
      "properties": {
          "creationData": {
              "createOption": "Empty"
          },
          "diskSizeGB": 1024,
          "diskIOPSReadWrite": 5000,
          "diskMBpsReadWrite": 200,
          "encryption": {
              "type": "EncryptionAtRestWithPlatformKey"
          },
          "networkAccessPolicy": "AllowAll",
          "publicNetworkAccess": "Enabled",
          "diskState": "Attached",
          "tier": "P30"
      }
    },
    {
      "apiVersion": "2019-06-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nicName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('publicIPAddressName')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": "[if(parameters('publicIp'), variables('publicIp'), json('null') )]",
              "subnet": {
                "id": "[parameters('subnetId')]"
                            
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2019-12-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('virtualMachineName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('networkSecurityGroupName')]",
        "[variables('nicName')]",
        "[variables('dataDiskName')]"
      ],
      "properties": {
          "hardwareProfile": {
              "vmSize": "[variables('vmSku')]"
          },
          "osProfile": {
              "computerName": "[variables('virtualMachineName')]",
              "adminUsername": "[variables('adminUsername')]",
              "adminPassword": "[variables('AdminPassword')]",
              "customData": "[parameters('customData')]"
          },
          "storageProfile": { 
            "imageReference": {
              "publisher": "[variables('imagePublisher')]",
              "offer": "[variables('imageOffer')]",
              "sku": "[variables('imageSku')]",
              "version": "[variables('imageOSVersion')]"
            },
            "osDisk": {
              "createOption": "FromImage"
            },
            "dataDisks": [
              {
                  "lun": 0,
                  "name": "[variables('dataDiskName')]",
                  "createOption": "Attach",
                  "caching": "ReadOnly",
                  "writeAcceleratorEnabled": false,
                  "managedDisk": {
                      "storageAccountType": "Premium_LRS",
                      "id": "[resourceID('Microsoft.Compute/disks', variables('dataDiskName'))]"
                  },
                  "diskSizeGB": 1024,
                  "toBeDetached": false
              }
          ]
          },
          "networkProfile": {
              "networkInterfaces": [
                  {
                      "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                  }
              ]
          },
          "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
      }
  }
  ],
  "outputs": {
    "password": {
      "type": "string",
      "value": "[variables('adminPassword')]"
    }
  }
}