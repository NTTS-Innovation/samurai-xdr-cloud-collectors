{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "CollectorName": {
        "type": "string"
      },
      "CollectorId": {
        "type": "string",
        "metadata": {
          "description": "Collector Id"
        }
      },
      "passkey": {
        "type": "securestring",
        "metadata": {
          "description": "Collector Passkey"
        }
    },
      "endPoint": {
      "type": "string",
      "defaultValue": "api.westeurope.samurai.security.ntt",
      "metadata": {
          "description": "Provide the URL for the WebHook to receive events."
      },
      "allowedValues": [
          "api.westeurope.samurai.security.ntt",
          "api.westeurope.release.samurai.security.ntt",
          "api.westeurope.develop.samurai.security.ntt"
      ]
      }
    },
    "variables": {
      "templateName": "[concat('SamuraiMDRCollector', '-', parameters('CollectorName') )]"
    },
    "resources": [
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2019-10-01",
        "name": "[variables('templateName')]",
        "properties": {
          "mode": "Incremental",
          "parameters": {
            "location": {
              "value": "[resourceGroup().location]"
            },
            "integrationsID": {
              "value": "[parameters('CollectorId')]"
            },
            "passkey": {
              "value": "[parameters('passkey')]"
            },
              "endpoint": {
              "value": "[parameters('endPoint')]"
            }
          },
          "templateLink": {
            "uri": "https://raw.githubusercontent.com/NTTS-Innovation/samurai-xdr-cloud-integrations/main/providers/azure/samuraiArm.json",
            "contentVersion": "1.0.0.0"
          }
        }
      }
    ]
  }
